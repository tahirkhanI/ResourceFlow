<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_margin="8dp">

    <!-- Classroom Name and Availability -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textClassroomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 101"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Now"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textSize="14sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_gravity="end"
        android:layout_marginTop="-24dp" />

    <!-- Capacity and Resources -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Capacity -->
        <TextView
            android:id="@+id/textCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: 40 students"
            android:textSize="14sp" />

        <!-- Power Outlets -->
        <TextView
            android:id="@+id/textPowerOutlets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 power outlets"
            android:textSize="14sp" />

        <!-- Tables -->
        <TextView
            android:id="@+id/textTables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 tables"
            android:textSize="14sp" />

        <!-- Chairs -->
        <TextView
            android:id="@+id/textChairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32 chairs"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Resources (Icons) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textProjector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83D\uDCF7 Projector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83C\uDF2C AC"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83D\uDCA8 Fan"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textWiFi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83D\uDCF6 Wi-Fi"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Existing Resources TextView (hidden) -->
    <TextView
        android:id="@+id/textRoomResources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>