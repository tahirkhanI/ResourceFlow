<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_edu_manager"
            android:background="@drawable/circle_bg"
            android:contentDescription="App Icon" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access your college resources"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <!-- Email Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_input_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Email icon" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Email"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:minHeight="48dp"/>
        </LinearLayout>

        <!-- Password Field with toggle icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_input_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Password icon" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter your password"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:minHeight="48dp"/>

            <ImageView
                android:id="@+id/togglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Show Password" />
        </LinearLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#61C431"
            android:padding="8dp"
            android:textSize="14sp" />


        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Log In"
            android:backgroundTint="#2763F7"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_bg"
            android:minHeight="48dp"/>

        <!-- Signup Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="16sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textColor="#2763F7"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Contact Support -->
        <TextView
            android:id="@+id/contactSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help? Contact support"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
