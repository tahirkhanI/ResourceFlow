<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFB">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#333"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Room Booking"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Portal"
            android:textSize="14sp"
            android:textColor="#888" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_search_bg"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            app:tint="#888"
            android:contentDescription="Search" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minHeight="48dp"
            android:background="@null"
            android:hint="Search rooms by name or number"
            android:textColorHint="#888"
            android:textColor="#333"
            android:textSize="16sp"
            android:paddingVertical="8dp"
            android:layout_marginStart="12dp"
            android:inputType="text" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/hsvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:singleSelection="true"
            app:selectionRequired="false">

            <!-- No app:chipTextAppearance here -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.ResourceFlow.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Available Now"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProjector"
                style="@style/Widget.ResourceFlow.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Projector" />



            <com.google.android.material.chip.Chip
                android:id="@+id/chipLargeCapacity"
                style="@style/Widget.ResourceFlow.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Large Capacity" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Classroom List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClassrooms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false" />

</LinearLayout>
